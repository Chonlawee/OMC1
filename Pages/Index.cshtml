@page 
@model IndexModel


@{
    ViewData["Title"] = "Home page";
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>หน้าหลัก</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-lux.css" />
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true"/>
</head>

<body>
    <div class="container">
        <div class="d-flex flex-row align-items-center ">
            <div class="d-flex justify-content-md-start m-3">
                <i class="fa-solid fa-location-dot fa-3x"></i>
            </div>
            <div class="col-8" id="Location_Text">
                <div class="d-flex flex-row mb-2">
                    <a>
                        ปทุมธานี
                    </a>
                </div>
                <div class="d-flex flex-row mb-2">
                    <a>
                        9/1 หมู่ที่ 5 ถ. พหลโยธิน ตำบล คลองหนึ่ง อำเภอคลองหลวง
                    </a>
                </div>
            </div>
        </div>
        <div class="search">
            <div class="d-flex rounded border justify-content-center mb-3 ">
                <button class="btn btn-secondary" type="button" id="button-addon1"><i class="fa fa-search" aria-hidden="true"></i></button>
                <input class="form-control form-control-rounded" type="search" placeholder="Search anything " aria-label="Search">
            </div>
        </div>
        @*---------------------------------------------------------------------------------------------------------------------------------------*@
        @*  Promotion box*@
        <!-- Carousel -->
        <div id="Promotion" class="carousel slide d-flex p-3" data-bs-ride="carousel">
            <!-- Indicators/dots -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#Promotion" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#Promotion" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#Promotion" data-bs-slide-to="2"></button>
            </div>

            <!-- The slideshow/carousel -->
            <div class="carousel-inner  " id="imgPromotion">
                <div class="carousel-item active">
                    <img src="/images/h89cukbew0ny.webp" class="d-block img-fluid m-auto">
                </div>
                <div class="carousel-item">
                    <img src="/images/Promotion.jpg" class="d-block img-fluid m-auto">
                </div>
                <div class="carousel-item">
                    <img src="/images/Promotion1.jpg" class="d-block img-fluid m-auto">
                </div>
            </div>

            <!-- Left and right controls/icons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#Promotion" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#Promotion" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            
            </button>
        </div>
        @*----------------------------------------------------------------------------------------------------------------------------------------*@
        @*Catagory box*@
        <div class="Catagory">
            <h1>หมวดหมู่</h1>
            <div class="d-flex flex-md-nowrap flex-sm-wrap overflow-auto scrollbar-width-none justify-content-center justify-content-around my-3">
                <div class="me-2" id="category-1"> @* set id = catagory-1 to easier custoimze in css*@
                    <img src="/images/coffee._iconpng.png" class="img-fluid"/>
                </div>
                <div class="me-2" id="category-2">
                    <img src="/images/Tea_Icon.png" class="img-fluid"/>
                </div>
                <div class="me-2" id="category-3">
                    <img src="/images/Promotion Icon/Promotion_icon.svg" class="cocoa-img img-fluid" />
                </div>
            </div>
        </div>
        @*---------------------------------------------------------------------------------------------------------------------------------------*@
        <div class="Product">
            <h1>สินค้า</h1>
            <div class="row m-1" id="productrow">
                @foreach (var item in Model.Product)
                {
                    <div class="col-4" id="productborder">
                        <div class="ImageProduct">
                            <a asp-page="./OrderDetail" asp-route-id="@item.ProductID">
                                <img src="data:image/jpg;base64,@item.ProductImage" class="img-fluid">
                            </a>
                        </div>
                        <div class="my-2 text-center">
                            @item.ProductName 
                        </div>
                        <div class="my-2 text-center">
                            @item.ProductPrice
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>


</html>